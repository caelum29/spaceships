{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    ".env"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "globals": {
    "ts-jest": {
      "isolatedModules": "true"
    }
  }
}
